#!/usr/bin/env perl6
use v6;
use Net::Curl::Easy;
#use File::Directory::Tree;

constant DEBUG = %*ENV<DEBUG>;

my $me = "stmuk";

my $url = "https://raw.githubusercontent.com/perl6/ecosystem/master/META.list";

my $content = Net::Curl::Easy.new(:$url).download;

my @lines = $content.split("\n").grep(/$me/);

for @lines -> $line {
    my $frag = $line.split("/").[4];
    my $repo = "https://github.com/{$me}/{$frag}.git";
    DEBUG and say $repo;
    shell "git clone $repo";
}

